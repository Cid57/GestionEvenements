{% extends 'base.html.twig' %}

{% block title %}Événement{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Événement</h1>
    </div>
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ evenement.id }}</td>
                </tr>
                <tr>
                    <th>Événement</th>
                    <td>{{ evenement.Evenement }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ evenement.date ? evenement.date|date('d-m-Y - H:i') : '' }}</td>
                </tr>
                <tr>
                    <th>Lieu</th>
                    <td>{{ evenement.lieu }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ evenement.description }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="actions">
            <a class="btn btn-primary" href="{{ path('app_evenement_index') }}">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            <a class="btn btn-secondary" href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">
                <i class="fas fa-edit"></i> Modifier
            </a>

            {{ include('evenement/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}